---
interface Props {
  title: string;
}

const { title } = Astro.props;

import { ViewTransitions } from "astro:transitions";
import GtagAdds from "../components/GtagAdds.astro";
import GtagAw from "../components/GtagAw.astro";
import Gtm from "../components/Gtm.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <GtagAdds />
    <GtagAw />
    <Gtm />
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="ERREPE Productora - Una empresa dedicada a la producción gastronómica e infraestructura
    para eventos y comercios"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <!-- Google Tag Manager (noscript) -->
    <noscript
      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-5C8MK5S3"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe></noscript
    >
    <!-- End Google Tag Manager (noscript) -->
    <slot />
    <style is:global>
      :root {
        --accent: 136, 58, 234;
        --accent-light: 224, 204, 250;
        --accent-dark: 49, 10, 101;
        --accent-gradient: linear-gradient(
          45deg,
          rgb(var(--accent)),
          rgb(var(--accent-light)) 30%,
          white 60%
        );
      }
      body,
      html,
      * {
        margin: 0;
        padding: 0;
      }
      html {
        font-family: system-ui, sans-serif;
        background-size: 224px;
        scroll-behavior: smooth;
      }

      code {
        font-family:
          Menlo,
          Monaco,
          Lucida Console,
          Liberation Mono,
          DejaVu Sans Mono,
          Bitstream Vera Sans Mono,
          Courier New,
          monospace;
      }

      @font-face {
        font-family: "ChaletNewYorkNineteenSeventy";
        src: url("/fonts/ChaletNewYorkNineteenSeventy.ttf") format("truetype");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }
      @font-face {
        font-family: "Cinematografica";
        src: url("/fonts/Cinematografica-Heavy-trial.ttf") format("truetype");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }
      @font-face {
        font-family: "Impact";
        src: url("/fonts/Impact.ttf") format("truetype");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }
      @font-face {
        font-family: "MyriadPro";
        src: url("/fonts/MyriadPro-Regular.otf") format("otf");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }
      @font-face {
        font-family: "compactaBT";
        src: url("/fonts/compactaBT.woff2") format("woff2");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }
      @font-face {
        font-family: "FormaDJRMicro";
        src: url("/fonts/FormaDJRMicro-Regular.ttf") format("truetype");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }
    </style>
  </body>
</html>

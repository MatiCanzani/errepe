<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  ScrollTrigger.create({
    trigger: ".trigger",
    pin: ".pin",
    start: "top top",
    end: "bottom bottom",
    markers: true,
  });
  

  let headings = gsap.utils.toArray(".slide");
  gsap.set(headings, { yPercent: 200, opacity: 0 });

  headings.forEach((heading, i) => {
    let tl = gsap.timeline({
      duration: 1,
      scrollTrigger: {
        trigger: ".trigger",
        start: () => `top+=${i * window.innerHeight} bottom`,
        end: () => `top+=${(i + 1) * window.innerHeight} center`,
        markers: true,
        scrub: true,
      },
    });

    tl.to(heading, { yPercent: 0, opacity: 1 })
      .to( heading, { yPercent: -200, opacity: 0 },
      "+=1"
    );
  });
</script>

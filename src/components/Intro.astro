            <p
              class="text-black text-[28px] font-Rocgroteskcond font-bold leading-none"
            >
              PRODUCTORA
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="absolute bottom-0 md:relative w-full h-screen">
    <Image
      src={Portada}
      alt="Night Tent event image"
      loading="eager"
      width={Portada.width}
      height={Portada.height}
      class="w-full h-full object-cover"
    />
  </div>
</div>

<script>
  import { gsap } from "gsap";

  document.addEventListener("DOMContentLoaded", () => {
    const tl = gsap.timeline();

    tl.from(".title", {
      opacity: 0,
      delay: 0.5,
      duration: 1,
      scale: 1.5,
      transformOrigin: "center",
      stagger: {
        amount: 0.3,
      },
    });


---
import { getImage } from "astro:assets";

const { bg, alt, frontImage, bgMobile, frontImageMobile } = Astro.props;

const optimizedFront = await getImage({
  src: frontImage,
  format: "webp",
});

const optimizedFrontMobile = await getImage({
  src: frontImageMobile,
  format: "webp",
});

const optimizedBg = await getImage({
  src: bg,
  format: "webp",
});

const optimizedBgMobile = await getImage({
  src: bgMobile,
  format: "webp",
});
---

<div class="relative w-full h-full md:flex justify-center items-center hidden">
  <div class="absolute h-full z-0">
    <img
      src={optimizedBg.src}
      alt={alt}
      class="h-auto"
      width="2667"
      height="1500"
    />
  </div>
  <div class="w-full min-h-full flex justify-center items-center z-10">
    <img
      src={optimizedFront.src}
      alt={alt}
      width="500"
      height="1112"
      class="h-auto"
    />
  </div>
</div>

<div class="relative w-full h-full flex justify-center items-center md:hidden">
  <div class="absolute h-full z-0">
    <img
      src={optimizedBgMobile.src}
      alt={alt}
      width="500"
      height="1112"
      class="h-auto"
    />
  </div>
  <div class="w-full min-h-full flex justify-center items-center z-10">
    <img
      src={optimizedFrontMobile.src}
      alt={alt}
      width="500"
      height="1112"
      class="h-auto"
    />
  </div>
</div>

---
import { getImage } from "astro:assets";

const { bg, alt, frontImage, bgMobile,frontImageMobile} = Astro.props;

const optimizedFront = await getImage({
  src: frontImage,
  format: "webp",
});

const optimizedMobile = await getImage({
  src: bg,
  format: "webp",
});


const optimizedBg = await getImage({
  src: bg,
  format: "webp",
});

const optimizedBgMobile = await getImage({
  src: bgMobile,
  format: "webp",
});
---

<div class="relative w-full h-full md:flex justify-center items-center -my-10 hidden">
  <div class="absolute h-full z-0">
    <img
    src={optimizedBg.src}
    alt={alt}
    class="h-auto"
  />
  </div>
  <div class="w-full min-h-full flex justify-center items-center z-10">
    <img src={optimizedFront.src} alt={alt} width={450} class="h-auto" />
  </div>
</div>


<div class="relative w-full h-full flex justify-center items-center md:hidden">
  <div class="absolute h-full z-0">
    <img
    src={optimizedBgMobile.src}
    alt={alt}
    class="h-auto"
  />
  </div>
  <div class="w-full min-h-full flex justify-center items-center z-10">
    <img src={optimizedFront.src} alt={alt} width={450} class="h-auto" />
  </div>
</div>
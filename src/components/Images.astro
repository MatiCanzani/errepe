---
import { getImage } from "astro:assets";

const { bg, alt, frontImage } = Astro.props;

const optimizedFront = await getImage({
  src: frontImage,
  format: "webp",
});
---

<div class="relative w-full h-full flex justify-center items-center -my-10 ">

  <div class="absolute h-full z-0">
    <img
    src={bg.src}
    alt={alt}
    class="h-auto"
  />
  </div>
  <div class="w-full min-h-full flex justify-center items-center z-10">
    <img src={optimizedFront.src} alt={alt} width={550} class="h-auto" />
  </div>
</div>
